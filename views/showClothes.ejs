<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head-admin.ejs' ,{tittle: 'Show Clothes'}) %>
    <style>
        body {
            margin: 0;
            padding: 0;
        }
    </style>
</head>
<body>
    <div class="container" style="margin-top: 3%;">
        <h1>Clothes Oke</h1>
    </div><br>

    <% if(result1.length === 0) { %>
        <div class="container">
            Name    : -
            <br>
            Role    : -
            <br>
            Role    : - 
            <br> 
            Email   : -
            <br><br>

            <div>
                <a href="/admin/login/<%=userId%>/addProfil">Add Profile</a>
            </div><br><br>
        </div>
    <% } %>

    <% if(result1.length > 0) { %>
        <div class="container">
            Name    : <%=result1[0].genderName%>
            <br>
            Role    : <%=result1[0].User.role%>
            <br>
            Email   : <%=result1[0].User.email%>
            <br>
            <div style="font-size: 15px;">
                <a href="/admin/login/<%=userId%>/editProfil">Edit Profile</a>
                <a href="/">Log Out</a>
            </div>
            <br><br>
        </div>
    <% } %>
        <div class="container">
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                    <div class="navbar-nav">
                        <a class="nav-link" href="/admin/login/<%=userId%>/allUser">All User</a>
                        <a class="nav-link" href="/admin/login/<%=userId%>/addClothe">add Clothes</a>
                    </div>
                </div>
                <form class="d-flex" role="search" action="/admin/login/<%=userId%>" method="get">
                    <input name="name" class="form-control me-2" type="search" placeholder="Search" style="width: 500px;">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </nav>
        </div><br><br>
    <div class="container">
        <div class="card-group">
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% result2.forEach((x, i)=>{ %>
                    <div class="card">
                        <img src="<%=x.imageUrl%>" class="card-img-top" alt="picture cloth">
                        <div class="card-body">
                            <h5 class="card-title"><%=x.changeFormat(x.price)%></h5>
                            <h6><%=x.name%></h6>
                            <p style="margin-top: -5%; font-size:small;">type: <%=x.type%></p>
                            
                            
                            <p>stock: <%=x.stock%></p>
                            <a href="/admin/login/<%=userId%>/stockMinus/<%=x.id%>"><button type="button" class="btn btn-outline-primary" style="padding: 5px; font-size: 12px;">- stock</button></a>
                            <a href="/admin/login/<%=userId%>/stockPlus/<%=x.id%>"><button type="button" class="btn btn-outline-primary" style="padding: 5px; font-size: 12px;">+ stock</button></a>
                            <p><%=x.statusSell(x.status)%></p>
                        </div>
                        <div class="card-footer">
                            <a href="/admin/login/<%=userId%>/editClothe/<%=x.id%>"><button type="button" class="btn btn-outline-success">Edit</button></a>
                            <a href="/admin/login/<%=userId%>/deleteClothe/<%=x.id%>"><button type="button" class="btn btn-outline-danger">Delete</button></a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>